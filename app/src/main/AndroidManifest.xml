<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tobias.werwolf_v1">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/werwolf_v2_icon_eckig"
        android:label="@string/app_name"
        android:roundIcon="@drawable/werwolf_v2_icon"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".LoadingScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".CharacterSelection"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".PlayerManagement"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".CardsToPlayerMatching"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ListNight"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".StartScreenActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Manual"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".VictoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".multipleDevices.HostConnectWithPlayers"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".multipleDevices.PlayerConnectToHost"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
    </application>

</manifest>