<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutcharakterRolle"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_character_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rund_amor"
            android:backgroundTint="@color/grau"
            android:gravity="center"
            android:text="@string/werwolf"
            android:textColor="@color/weiss"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textview_amount_character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/zahl_0"
            android:textColor="@color/weiss"
            android:textSize="38sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_reduce_character"
                android:layout_width="53dp"
                android:layout_height="53dp"
                app:srcCompat="@drawable/minus_v1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/image_add_character"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/plus_v1"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textview_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:text="@string/beschreibungWerwolf"
        android:textColor="@color/weiss"
        android:textSize="20sp"
        android:visibility="gone" />
</LinearLayout>

