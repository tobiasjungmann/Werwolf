<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:background="@color/hellgrau"
    android:id="@+id/layoutcharakterRolle"
    android:layout_marginBottom="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layoutWerwolf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iconWerwolf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rund_werwolf"
            android:gravity="center"
            android:text="@string/werwolf"
            android:textColor="@color/weiss"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/nummerWerwolf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/zahl_0"
            android:textSize="38sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/minusWerwolf"
                app:srcCompat="@drawable/minus_v1"
                tools:ignore="ContentDescription"
                android:layout_width="53dp"
                android:layout_height="53dp" />

            <ImageView
                android:id="@+id/plusWerwolf"
                app:srcCompat="@drawable/plus_v1"
                tools:ignore="ContentDescription"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/infoTextWerwolf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:text="@string/beschreibungWerwolf"
        android:textColor="@color/weiss"
        android:textSize="20sp"
        android:visibility="gone" />
</LinearLayout>

